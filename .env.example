# Eva Backend Configuration
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# Server port (default: 8080)
PORT=8080

# SQLite database file path (default: ./eva.db)
DB_PATH=./eva.db

# OpenAI API key — required for Agent nodes using GPT models (M4+)
LLM_API_KEY=sk-...

# Anthropic API key — required for Agent nodes using Claude models (M7+)
ANTHROPIC_API_KEY=sk-ant-...

# Credential master key — 32-byte hex string used for AES-256-GCM encryption
# of stored connector credentials (M5+). Generate with:
#   openssl rand -hex 32
CREDENTIAL_MASTER_KEY=

# Log level: debug | info | warn | error (default: info)
LOG_LEVEL=info
